(run
    (set mainbases (:
        (n d 4)
        (n c 4)
        (n b 3)
        (n (flat b) 3)
    ))

    (set mainpattern (sum (map (' :
        (t  #1                  1 16    )
        (t  #1                  1 16    )
        (t  (n d 5)             1 8     )
        (t  (n a 4)             3 16    )
        (t  (n (flat a) 4)      1 8     )
        (t  (n g 4)             1 8     )
        (t  (n f 4)             1 8     )
        (t  (n d 4)             1 16    )
        (t  (n f 4)             1 16    )
        (t  (n g 4)             1 16    )
    ) mainbases)))

    (set mainpattern_high (transpose mainpattern 12))

    (set bassbases (:
        (: (n d 3) (n d 3))
        (: (n c 3) (n c 3))
        (: (n b 2) (n b 2))
        (: (n (flat b) 2) (n c 3))
    ))

    (set basspattern (sum (map (' :
        (t  ( ! #1 0 )          1 8     )
        (t  ( ! #1 0 )          1 8     )
        (t  ( ! #1 0 )          1 16    )
        (t  ( ! #1 0 )          1 8     )
        (t  ( ! #1 1 )          1 16    )
        (rest                   1 16    )
        (t  ( ! #1 1 )          1 8     )
        (t  ( ! #1 1 )          1 16    )
        (t  ( ! #1 1 )          1 16    )
        (t  ( ! #1 1 )          1 16    )
        (t  ( ! #1 1 )          1 8     )
    ) bassbases)))

    (showenv)

    (clocksetup 120 (: 4 4))

    (ontick (' run
        (ifthen      (divides #1 4)            (' play mainpattern))
        (ifthen (and (divides #1 4) (gt #1 3)) (' play basspattern))
        (ifthen (and (divides #1 4) (gt #1 7)) (' play mainpattern_high))

    ))

    (clockstart)
)
